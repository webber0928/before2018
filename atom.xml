	  <span class="tag">&lt;<span class="title">h1</span> <span class="attribute">class</span>=<span class="value">"title"</span>&gt;</span><span class="vbscript">&lt;%= __(<span class="comment">'comment') %&gt;</span></span><span class="tag">&lt;/<span class="title">h1</span>&gt;</span>

	  <span class="vbscript">&lt;% <span class="keyword">if</span> (theme.comment_provider == <span class="string">"facebook"</span>) {
	      <span class="keyword">if</span> (theme.facebook) { %&gt;</span>
	      <span class="vbscript">&lt;%- partial(<span class="comment">'_partial/facebook_comment', {fbConfig: theme.facebook}) %&gt;</span></span>
